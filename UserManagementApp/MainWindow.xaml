<Window x:Class="UserManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManagementApp"
        xmlns:converters="clr-namespace:UserManagementApp.Converters"
        mc:Ignorable="d"
        Title="Редактор таблиц базы данных" Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Панель выбора таблицы -->
            <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" 
                       HorizontalAlignment="Left">
                <Label Content="Выберите таблицу:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox ItemsSource="{Binding TableViewModel.Tables}"
                          SelectedItem="{Binding TableViewModel.SelectedTable}"
                          DisplayMemberPath="DisplayName"
                          MinWidth="200" MaxWidth="350" Height="30" Margin="0,0,10,5"/>
                <Button Content="Обновить данные" Command="{Binding TableViewModel.RefreshDataCommand}" 
                        MinWidth="120" Height="30" Margin="0,0,10,5"/>
                <Button Content="Обновить список таблиц" Command="{Binding TableViewModel.LoadTablesCommand}" 
                        MinWidth="150" Height="30" Margin="0,0,10,5"/>
                <Separator Width="2" Height="25" Margin="5,0"/>
                <Button Content="Добавить запись" Command="{Binding TableViewModel.AddRowCommand}" 
                        MinWidth="120" Height="30" Margin="0,0,10,5"/>
                <Button Content="Удалить запись" Command="{Binding TableViewModel.DeleteRowCommand}" 
                        MinWidth="120" Height="30" Margin="0,0,10,5"/>
                <Separator Width="2" Height="25" Margin="5,0"/>
                <Button Content="Экспорт JSON" Command="{Binding TableViewModel.ExportToJsonCommand}" 
                        MinWidth="100" Height="30" Margin="0,0,10,5"/>
                <Button Content="Импорт JSON" Command="{Binding TableViewModel.ImportFromJsonCommand}" 
                        MinWidth="100" Height="30" Margin="0,0,10,5"/>
            </WrapPanel>

            <!-- DataGrid для отображения данных таблицы -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding TableViewModel.TableDataView, Mode=OneWay}"
                      SelectedItem="{Binding TableViewModel.SelectedRow}"
                      AutoGenerateColumns="True" 
                      IsReadOnly="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      BeginningEdit="DataGrid_BeginningEdit"
                      CellEditEnding="DataGrid_CellEditEnding">
            </DataGrid>

            <!-- Разделитель -->
            <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                          VerticalAlignment="Center" ShowsPreview="True"/>

            <!-- Панель логов транзакций -->
            <GroupBox Grid.Row="3" Header="Лог транзакций" Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Кнопки управления логами -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="Очистить лог" Width="100" Height="25" 
                                Command="{Binding TableViewModel.ClearLogCommand}"/>
                        <CheckBox Content="Автопрокрутка" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="10,0,0,0"
                                  x:Name="AutoScrollCheckBox"/>
                    </StackPanel>
                    
                    <!-- Текстовое поле для логов -->
                    <TextBox Grid.Row="1" 
                             Text="{Binding TableViewModel.TransactionLog, Mode=OneWay}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="#F5F5F5"
                             Padding="5"
                             x:Name="LogTextBox"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="20" Height="15" Margin="0,0,10,0"
                                 IsIndeterminate="True" 
                                 Visibility="{Binding TableViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding TableViewModel.StatusMessage}"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выбранная таблица: " FontWeight="Normal"/>
                    <TextBlock Text="{Binding TableViewModel.SelectedTable.TableName, Mode=OneWay, FallbackValue='Не выбрана'}" FontWeight="Bold"/>
                    <TextBlock Text=" | Записей: " Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding TableViewModel.TableData.Rows.Count, Mode=OneWay, FallbackValue='0'}" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
